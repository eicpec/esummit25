service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to submit pass registrations
    match /passRegistrations/{docId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;  // Optional: Allow users to view registrations
    }
    
    // Allow authenticated users to register for events
    match /eventRegistrations/{docId} {
      allow create: if request.auth != null;  // Any signed-in user can register
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}